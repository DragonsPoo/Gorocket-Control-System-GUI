{
  "name": "nextn",
  "version": "0.1.0",
  "private": true,
  "description": "Rocket Engine Test Control and Monitoring GUI",
  "author": "Jules",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm:next:dev\" \"npm:electron:dev\"",
    "next:dev": "next dev --turbopack -p 9002",
    "electron:dev": "wait-on http://localhost:9002 && electron .",
    "build:electron": "rimraf dist && tsc -p tsconfig.electron.json && tsc-alias -p tsconfig.electron.json && node -e \"require('fs').copyFileSync('config.json','dist/config.json')\"",
    "build:web": "next build --no-lint",
    "build": "npm run build:electron && npm run build:web",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "rebuild": "electron-rebuild -f -w serialport",
    "predev": "npm run build:electron",
    "package": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "validate:seq": "node -e \"const Ajv=require('ajv');const fs=require('fs');const s=JSON.parse(fs.readFileSync('./sequences.schema.json','utf8'));const d=JSON.parse(fs.readFileSync('./sequences.json','utf8'));const ajv=new Ajv({allErrors:true,strict:false});const v=ajv.compile(s)(d);console.log('AJV_OK',v);if(!v)console.log(ajv.errors)\""
  },
  "build": {
    "appId": "com.gorocket.control-system-gui",
    "productName": "GoRocket Control System GUI",
    "npmRebuild": false,
    "asar": true,
    "asarUnpack": ["**/serialport/**"],
    "extraResources": [
      { "from": "sequences.json", "to": "sequences.json" },
      { "from": "sequences.schema.json", "to": "sequences.schema.json" },
      { "from": "config.json", "to": "config.json" }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "out/**/*",
      "node_modules/**/*",
      "!node_modules/@img/sharp-darwin-arm64/**/*"
    ],
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "ajv": "^6.12.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^3.0.1",
    "electron-serve": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.475.0",
    "next": "15.3.3",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "serialport": "^10.5.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^15.4.6",
    "postcss": "^8",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  }
}
